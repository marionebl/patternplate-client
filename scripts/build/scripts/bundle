#!/usr/bin/env sh
function bundle() {
	IN=$1
	OUT=$2
	FLAG=$3
	MAP=$4
	MAPPATH=$5
	WATCH=$6

	if [ $IN = "false" ]; then
		IN=""
	fi

	if [ "$WATCH" = "--watch" ]; then
		COMMAND="watchify"
	else
		COMMAND="browserify"
	fi

	if [ "$NODE_ENV" = "production" ]; then
		MINIFY="-p [minifyify --map $MAP --output $MAPPATH]"
	else
		MINIFY=""
	fi

	FLAGS="$FLAG react-dom \
		$FLAG react \
		$FLAG redux \
		$FLAG url \
		$FLAG whatwg-fetch \
		$FLAG react-router-redux \
		$FLAG core-js \
		$FLAG react-addons-shallow-compare \
		$FLAG react-transition-group \
		$FLAG fuse.js \
		$FLAG redux-promise \
		$FLAG md5 \
		$FLAG react-redux \
		$FLAG redux-actions \
		$FLAG autobind-decorator \
		$FLAG classnames \
		$FLAG fbjs \
		$FLAG redux-thunk \
		$FLAG pure-render-decorator \
		$FLAG strip-ansi \
		$FLAG ansi-regex \
		$FLAG isomorphic-fetch \
		$FLAG core-js \
		$FLAG regenerator-runtime \
		$FLAG babel-polyfill \
		$FLAG lodash" \

	mkdir -p $(dirname $OUT) && \
	$COMMAND $IN \
		$FLAGS \
		--debug \
		-v \
		$MINIFY \
		-t [ \
				babelify \
					--presets [es2015 stage-0 react] \
					--plugins [transform-decorators-legacy transform-react-remove-prop-types transform-react-router-optimize transform-runtime add-module-exports] \
			] \
		-t brfs \
		-t [envify] \
		-o $OUT
}

bundle $@
